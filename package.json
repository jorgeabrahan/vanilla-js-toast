{
  "name": "vanilla-js-toast",
  "version": "1.4.0",
  "description": "A simple vanilla JS toast notification library",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "source": "src/index.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/toast.css"
  },
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch"
  },
  "author": "jorge_siguenza",
  "license": "MIT",
  "devDependencies": {
    "microbundle": "0.15.1",
    "typescript": "5.5.4"
  }
}
